	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
				<li class="active">Danh sách bình luận</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Danh sách bình luận</h1>
			</div>
		</div><!--/.row-->
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-body">
                        <table 
                            data-toolbar="#toolbar"
                            data-toggle="table">

						    <thead>
						    <tr>
						        <th data-field="id" data-sortable="true">ID</th>
                                <th data-field="full_name"  data-sortable="true">Họ & Tên</th>
						        <th data-field="email"  data-sortable="true">Email</th>
                                <th>Bình luận</th>
                                <th>Hành động</th>
						    </tr>
                            </thead>
                            <tbody>
                                <% let y=1 %>
                                <% for(let x in comments){%>
                                    <tr>
                                        <td style=""><%=y++ %></td>
                                        <td style=""><%=comments[x].full_name %></td>
                                        <td style=""><%=comments[x].email %></td>
                                        <td style=""><%=comments[x].body %> </td>
                                        <td class="form-group">
                                            <a href="/admin/comments/delete/<%=comments[x]._id%>" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                                        </td>
                                    </tr>
                                    <% }%>
                                 </tbody>
						</table>
                    </div>
                    <div class="panel-footer">
                    </div>
				</div>
			</div>
		</div><!--/.row-->	
	</div>	<!--/.main-->

